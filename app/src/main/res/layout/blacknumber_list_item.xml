<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/black_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/brightpurple_contact_icon"/>
    <TextView
        android:id="@+id/tv_list_black_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/black_icon"
        android:layout_alignTop="@+id/black_icon"
        android:textSize="16sp"
        android:text="1233"/>
    <TextView
        android:id="@+id/tv_list_black_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/black_icon"
        android:layout_below="@+id/tv_list_black_name"
        android:textSize="14sp"
        android:text="1233"/>
    <ImageView
        android:id="@+id/iv_black_delete"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/delete_icon"/>

</RelativeLayout>