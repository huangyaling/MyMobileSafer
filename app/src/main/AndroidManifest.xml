<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bella.mobilesafer" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".activity.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HomeActivity"/>
        <activity android:name=".activity.SettingsActivity"/>
        <activity android:name=".activity.AppManagerActivity"/>
        <activity android:name=".activity.StroageCleanActivity"/>
        <activity android:name=".activity.MobileSecurity"/>
        <activity android:name=".activity.BlackNumberActivity"/>
        <activity android:name=".activity.AddBlackNumberActivity"/>
        <instrumentation
            android:name="android.test.InstrumentationTestRunner"
            android:targetPackage="com.bella.mobilesafer"/>
        <uses-library android:name="android.test.runner"></uses-library>
    </application>

</manifest>
